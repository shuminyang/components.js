{
  "transform": {
    "^.+\\.(t|j)sx?$": "ts-jest",
    ".+\\.(css|styl|less|sass|scss)$": "jest-css-modules-transform"
  },
  "testRegex": "packages/react.*(\\.|/)(test)\\.(jsx?|tsx?)$",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "moduleNameMapper": {
    "^~/(.*)$": "<rootDir>/src/$1"
  }
}
